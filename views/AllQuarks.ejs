<!DOCTYPE html>
<html>
<title>All Quarks</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Garamond">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source Serif Pro">
<link rel="stylesheet" href="/font-awesome.min.css">
<link rel="stylesheet" href="/QuarkStylesDesktop.css">
<link rel="stylesheet" href="/QuarksLargePh.css">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="/w3styles.css">
<link rel="icon" href="QuarkOtherImages/QuarksLogoFinal.png" sizes="16x16">

<meta property="og:url" content="https://angshumankashyap.in/AllQuarks" />
<meta property="og:type" content="website" />
<meta property="og:title" content="Join Quarks" />
<meta property="og:description" content="And Refuel Your Curiosity" />
<meta property="og:image" content="images/quark1.jpg" />

<script src="/w3.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<body id="body">
  <!-- Navbar (sit on top) -->
  <div class="w3-top" id="navBAR">
    <div class="w3-bar" id="myNavbar" style="width:100vw; max-width:100vw; min-width:100vw;">
      <a class="w3-bar-item w3-button w3-hover-black w3-hide-medium w3-hide-large w3-right" href="javascript:void(0);"
        onclick="toggleFunction()" title="Toggle Navigation Menu">
        <i class="fa fa-bars"></i>
      </a>
      <a href="/QuarkX" class="w3-bar-item"> <img id="QuarksLogo" src="/QuarkOtherImages/QuarksLogoFinal.png"> </a>
      <a href="/QuarkX" class="w3-bar-item" id="nameQuarks" class="w3-black"> QuarkX </a>
      <!-- Light mode and dark Mode -->
      <div class="w3-bar-item"> <img id="NightMode" src="/QuarkOtherImages/NightMode.png"> </div>
      <div class="w3-bar-item"> <img id="DayMode" src="/QuarkOtherImages/DayMode.png"> </div>

      <div style="margin-top:3vh">
        <a href="/" class="navItems w3-bar-item w3-hide-small" id="navItem1Home"> Home</a>
        <a href="/QuarkX">
          <div class="navItems w3-bar-item w3-hide-small" id="navItem2submit"> QuarkX</div>
        </a>
        <a href="/QuarkX/all" class="navItems w3-bar-item w3-hide-small" id="navItem3read"> Read</a>
        <a href="/QuarkX#SubscriptionQuarks" class="navItems w3-hide-medium w3-bar-item w3-hide-small homeSubscribe"
          id="navItems3Quarks">Subscribe</a>
        <a href="/QuarkX#SubscriptionQuarksTablet"
          class="navItems w3-hide-large w3-bar-item w3-hide-small homeSubscribe" id="navItems3Quarks">Subscribe</a>
        <a href="/submitQuarks" class="navItems w3-bar-item w3-hide-small submitBtn" id="navItems4Quarks">Submit</a>
      </div>

    </div>

    <!-- Navbar on small screens -->
    <div id="navDemo" style="width:100vw; max-width:100vw; min-width:100vw;"
      class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium">
      <a href="index" class="w3-bar-item w3-right w3-button navPh" onclick="toggleFunction()">Home</a>
      <a href="QuarkX" class="w3-bar-item w3-right w3-button navPh" onclick="toggleFunction()">QuarkX</a>
      <a href="QuarkX#subscribeCardPh" class="w3-bar-item w3-right w3-button navPh"
        onclick="toggleFunction()">Subscribe</a>
      <a href="submitQuarks" class="w3-bar-item w3-right w3-button navPh" onclick="toggleFunction()">Submit</a>
    </div>
  </div>

  <div class="OutQuarks">
    <div class="Quarks w3-row">
      <% for(var i=0; i < data.length; i++) { %>
      <div style="text-decoration: none" class="AllQuarks SubGK w3-container w3-half quarkHalf" id="quark85Card">
        <div class="w3-card QuarkCards">
          <img class="quarkImages" src=" <%= data[i].QuarkImage %> ">
          <div class="w3-center QuarkTitle" id="quark85Title"><%= data[i].QuarkTitle %></div>
          <div id="quark85Text" class="writings"><%= data[i].QuarkText %></div>
          <div id="stripDiv">
            <div class="QuarkBottomStrip"> </div>
            <a href="/QuarkX?subject=<%= data[i].Subject %>">
              <div id="GenKnowledgeTag" class="w3-button GenKnowledgeTag w3-hover-white w3-blue w3-round">
                <%= data[i].Subject %>
              </div>
            </a>
            <div class="AuthorName"> Quark by <%= data[i].Author %></div>
            <div class="DateOfQuark">
              <% 
              const dateTimeFormat = new Intl.DateTimeFormat('en', { year: 'numeric', month: 'long', day: '2-digit' })
              const [{ value: month },,{ value: day },,{ value: year }] = dateTimeFormat .formatToParts(new Date(data[i].createdAt))
              %>
              <%= day %> <%= month %>, <%= year %>
            </div>
            <!-- <div id="LikeQuarkFb" class="fb-like" data-href="https://abhigyan1996.github.io/Quarks/index.html#LightningCard" data-width="" data-layout="button_count" data-action="like" data-size="small" data-share="false"></div>  -->
            <i id="listenQuark85" class="listenBtn fas fa-headphones"></i>
            <a href="QuarkX#SubscriptionQuarks"><i id="subscribeBtnLptp" class="w3-hide-small w3-hide-medium fa fa-bell"
                style="color:white"></i></a>
            <a href="QuarkX#SubscriptionQuarksTablet"><i id="subscribeBtnMed"
                class="w3-hide-small w3-hide-large fa fa-bell" style="color:white"></i></a>
            <a href="QuarkX#subscribeCardPh"><i id="subscribeBtnPh" class="w3-hide-medium w3-hide-large fa fa-bell"
                style="color:white"></i></a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <script>
    // Change style of navbar on scroll
    window.onscroll = function () { myFunction() };
    function myFunction() {
      var navbar = document.getElementById("myNavbar");
      if (document.body.scrollTop > 40 || document.documentElement.scrollTop > 40) {
        navbar.className = "w3-bar" + " w3-card" + " w3-white";
      } else {
        navbar.className = navbar.className.replace(" w3-card w3-white", "");
      }
    }

    // Used to toggle the menu on small screens when clicking on the menu button
    function toggleFunction() {
      var x = document.getElementById("navDemo");
      if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
      } else {
        x.className = x.className.replace(" w3-show", "");
      }
    }
  </script>
  <script>
    $(document).ready(function () {
      var navbar = document.getElementById("myNavbar");
      if (document.body.scrollTop > 40 || document.documentElement.scrollTop > 40) {
        navbar.className = "w3-bar" + " w3-card" + " w3-white";
      } else {
        navbar.className = navbar.className.replace(" w3-card w3-white", "");
      }
      $("#NightMode").click(function () {
        $("#NightMode").fadeOut();
        $("#DayMode").fadeIn();
        $("body").css({ "background-color": "#bbb" });
        $(".Quarks").css({ "background-color": "#bbb" });
        $("#navBAR").css({ "background": "white" });
        $(".QuarkCards").css({ "background": "black" });
        $(".QuarkTitle").css({ "background": "black" });
        $(".writings").css({ "background": "black" });
        $(".writings").css({ "color": "white" });
        $(".QuarkTitle").css({ "color": "white" });
        $(".QuarkBottomStrip").css({ "background": "#0E0D0F" });
      });

      $("#DayMode").click(function () {
        $("#DayMode").fadeOut();
        $("#NightMode").fadeIn();
        $("body").css({ "background-color": "white" });
        $(".Quarks").css({ "background-color": "white" });
        $("#navBAR").css({ "background": "white" });
        $(".QuarkCards").css({ "background": "white" });
        $(".QuarkTitle").css({ "background": "white" });
        $(".writings").css({ "background": "white" });
        $(".writings").css({ "color": "black" });
        $(".QuarkTitle").css({ "color": "black" });
        $(".QuarkBottomStrip").css({ "background": "black" });

      });
    });
  </script>

  <script>
    AOS.init();
  </script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163447394-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-163447394-1');
  </script>
</body>

</html>