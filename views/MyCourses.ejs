<script>



  const ul = document.querySelectorAll('ul');
  
  var ClassNew = "";
  var CourseNew = "";
  let courseStr = [];
  let classStr = [];
  var k = 0; var j = 0;
  
  for (let i = 0; i <= ul.length - 1; i++) {
    var courseClass = document.getElementById("courseName").value;  
    courseClass = $("#CousesList li").text();
    courseClass = courseClass.replace(/(\r\n|\n|\r| )/gm,"");
    console.log(courseClass);
    var res = courseClass.split(",");
    console.log("res", res);

    $(document).ready(function() {
 
          for (var i = 0; i < res.length-1; i=i+2) {
            courseStr[k++] = res[i];
          }
          for (var i = 1; i < res.length-1; i=i+2) {
            classStr[j++] = res[i];
          }
        
          console.log("classStr", classStr);
          console.log("courseStr", courseStr);

        $("#CousesList li").click(function() {
          var index = $(this).index();
          console.log("Index", index);
       
          for (var i = 0; i < courseStr.length; i++) {
            CourseNew = courseStr[index];
          }
          for (var i = 0; i < classStr.length; i++) {
            ClassNew = classStr[index];
          }
          
          console.log("CourseNew", CourseNew);
          console.log("ClassNew", ClassNew);

          document.getElementById('ClassId').value = ClassNew;
          document.getElementById('CourseId').value = CourseNew;
         $("#allCoursesForm").submit();
        });
    });
  }

</script>


